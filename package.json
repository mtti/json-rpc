{
  "name": "@mtti/json-rpc",
  "version": "0.1.0",
  "description": "JSON-RPC 2.0 server library",
  "repository": "github:mtti/json-rpc",
  "author": "Matti Hiltunen",
  "license": "Apache-2.0",
  "private": true,
  "engines": {
    "node": ">=12.13.0"
  },
  "main": "lib/index.js",
  "scripts": {
    "build": "tsc",
    "jest": "jest --config ./jest.config.json",
    "lint": "eslint 'src/**/*.ts'",
    "lint:fix": "eslint --fix 'src/**/*.ts'",
    "prepare": "npm run build",
    "prepublishOnly": "npm run test",
    "setup": "npm install",
    "test": "npm run lint && npm run jest",
    "test:docker": "docker build -f ./Dockerfile-test -t ts-test . && docker run --rm -it ts-test",
    "tsc": "tsc",
    "watch": "chokidar --initial -c \"npm run build\" \"src/**/*.ts\""
  },
  "files": [
    "lib",
    "!lib/**/*.spec.*"
  ],
  "devDependencies": {
    "@mtti/eslint-config-typescript": "2.0.0",
    "@types/body-parser": "1.17.1",
    "@types/content-type": "1.1.3",
    "@types/express": "4.17.2",
    "@types/jest": "24.9.0",
    "@types/node": "13.1.8",
    "@typescript-eslint/eslint-plugin": "2.17.0",
    "@typescript-eslint/parser": "2.17.0",
    "chokidar-cli": "2.1.0",
    "eslint": "6.8.0",
    "eslint-plugin-import": "2.20.0",
    "jest": "25.1.0",
    "ts-jest": "24.3.0",
    "typescript": "3.7.5"
  },
  "dependencies": {
    "@mtti/funcs": "^2.0.0",
    "ajv": "^6.11.0",
    "body-parser": "^1.19.0",
    "content-type": "^1.0.4",
    "express": "^4.17.1",
    "raw-body": "^2.4.1"
  }
}
